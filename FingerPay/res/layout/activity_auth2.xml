<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebf1"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/toolbar_bg"
        android:gravity="center_vertical" >

        <ImageButton
            android:id="@+id/sign_titleback_btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:onClick="onClick"
            android:scaleType="fitStart"
            android:src="@drawable/toolbar_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="账单支付"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sign_idlayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="5dp"
            android:scaleType="fitStart"
            android:src="@drawable/auth_money" />

        <TextView
            android:id="@+id/auth_money_tv"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:text="100"
            android:textColor="@drawable/darkorange"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sign_idlayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="5dp"
            android:scaleType="fitStart"
            android:src="@drawable/auth_account" />

        <TextView
            android:id="@+id/auth_account_tv"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center|left"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"
            android:text="18810680163"
            android:textColor="@drawable/darkorange"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_layout"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="3dp"
            android:paddingLeft="5dp"
            android:scaleType="fitStart"
            android:src="@drawable/auth_finger" />

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/sign_lfinger_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="onClick"
                android:scaleType="center"
                android:src="@drawable/finger_bg" />

        </FrameLayout>

        <ImageView
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/finger_gapline" />

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/sign_rfinger_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:onClick="onClick"
                android:scaleType="center"
                android:src="@drawable/finger_bg" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>